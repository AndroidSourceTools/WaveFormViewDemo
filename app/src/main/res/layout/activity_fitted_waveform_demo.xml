<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

  <space.siy.waveformview.FittedWaveFormView
      android:id="@+id/waveView_1"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      app:blockColor="@android:color/holo_blue_dark"
      app:blockColorPlayed="@android:color/holo_red_dark"
      app:blockWidth="40"
      app:topBlockScale="1"
      app:bottomBlockScale="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@color/colorPrimary"/>

  <space.siy.waveformview.FittedWaveFormView
      android:id="@+id/waveView_2"
      android:layout_width="200dp"
      android:layout_height="50dp"
      app:blockColor="@android:color/holo_blue_dark"
      app:blockColorPlayed="@android:color/holo_red_dark"
      app:blockWidth="10"
      app:topBlockScale="1"
      app:bottomBlockScale="0.5"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/waveView_1"
      android:background="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>